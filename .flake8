[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    docs/_build,
    .eggs,
    *.egg-info,
    .tox,
    .venv,
    venv

# Ignore specific errors/warnings
ignore = 
    E203,  # whitespace before ':' (black formatting style)
    W503,  # line break before binary operator (black formatting style)
    E501   # line too long (handled by black)

per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501

statistics = True
count = True